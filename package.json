{
  "name": "nsite-gateway",
  "version": "0.7.0",
  "description": "A blossom server implementation written in Typescript",
  "main": "dist/index.js",
  "type": "module",
  "author": "hzrd149",
  "license": "MIT",
  "scripts": {
    "start": "node dist/index.js",
    "prepack": "tsc",
    "build": "tsc",
    "dev": "nodemon -i '**/data/**' --exec 'node' --loader @swc-node/register/esm src/index.ts",
    "bundle": "esbuild --bundle dist/index.js --format=esm --platform=node --outfile=build/bundle.mjs",
    "format": "prettier -w ."
  },
  "bin": "dist/index.js",
  "files": [
    "dist",
    "public"
  ],
  "dependencies": {
    "@keyv/redis": "^4.3.2",
    "@keyv/sqlite": "^4.0.1",
    "@koa/cors": "^5.0.0",
    "blossom-client-sdk": "^3.0.1",
    "debug": "^4.4.0",
    "dotenv": "^16.4.7",
    "follow-redirects": "^1.15.9",
    "keyv": "^5.3.2",
    "koa": "^2.16.0",
    "koa-morgan": "^1.0.1",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "mime": "^4.0.6",
    "nostr-tools": "^2.11.0",
    "nsite-cli": "^0.1.16",
    "pac-proxy-agent": "^7.2.0",
    "proxy-agent": "^6.5.0",
    "puppeteer": "^23.11.1",
    "websocket-polyfill": "1.0.0",
    "ws": "^8.18.1",
    "xbytes": "^1.9.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@swc-node/register": "^1.10.10",
    "@swc/core": "^1.11.10",
    "@types/better-sqlite3": "^7.6.12",
    "@types/debug": "^4.1.12",
    "@types/follow-redirects": "^1.14.4",
    "@types/koa": "^2.15.0",
    "@types/koa-morgan": "^1.0.8",
    "@types/koa-send": "^4.1.6",
    "@types/koa-static": "^4.0.4",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.17.24",
    "@types/proxy-from-env": "^1.0.4",
    "@types/ws": "^8.18.0",
    "esbuild": "^0.25.1",
    "nodemon": "^3.1.9",
    "pkg": "^5.8.1",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "resolutions": {
    "websocket-polyfill": "1.0.0"
  },
  "packageManager": "pnpm@9.6.0"
}
