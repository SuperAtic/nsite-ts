    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^20.11.19",
    "@types/ws": "^8.5.10",
    "nodemon": "^3.0.3",
    "prettier": "^3.3.3",
    "typescript": "^5.3.3"
