    "debug": "^4.3.5",
    "dotenv": "^16.4.5",
    "follow-redirects": "^1.15.6",
    "http-errors": "1",
    "koa": "^2.15.3",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "mime": "^4.0.4",
    "nostr-tools": "^2.7.2",
